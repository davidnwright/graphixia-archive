			<wp:comment_id>98</wp:comment_id>
			<wp:comment_author><![CDATA[Vanni LoRiggio]]></wp:comment_author>
			<wp:comment_author_email>vloriggio@sympatico.ca</wp:comment_author_email>
			<wp:comment_author_url></wp:comment_author_url>
